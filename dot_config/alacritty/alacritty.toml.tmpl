[window]
padding = { x = 0, y = 0 }
opacity = 1.0
decorations = "None"
startup_mode = "Maximized"
dynamic_title = true
{{- if eq .chezmoi.os "darwin" }}
option_as_alt = "Both"
{{- end }}

[env]
# TERM set to tmux-256color so tmux handles escape sequences properly
# This ensures Flow (with Kitty keyboard disabled) works correctly in tmux
TERM = "tmux-256color"

{{- if or (eq .chezmoi.os "windows") (and (eq .chezmoi.os "linux") (.chezmoi.kernel.osrelease | lower | contains "microsoft")) }}

[terminal.shell]
program = "wsl.exe"
{{- end }}

[keyboard]
bindings = [
    { key = "V", mods = "Control", action = "Paste" },
    { key = "V", mods = "Control|Shift", action = "Paste" },
    { key = "C", mods = "Control|Shift", action = "Copy" },
    { key = "D", mods = "Control|Shift", chars = "\u001b[68;5u" },
    { key = "W", mods = "Command", action = "None" },
    { key = "Up", mods = "Control|Alt|Shift", chars = "\u001b[1;8A" },
    { key = "Down", mods = "Control|Alt|Shift", chars = "\u001b[1;8B" },
]

[mouse]
bindings = [
    { mouse = "Middle", action = "PasteSelection" },
]

[selection]
save_to_clipboard = true
semantic_escape_chars = ",â”‚`|:\"' ()[]{}<>\t"

[font]
size = 12.0

[font.normal]
family = "JetBrainsMono Nerd Font"
style = "SemiBold"

[font.bold]
family = "JetBrainsMono Nerd Font"
style = "Bold"

[font.italic]
family = "JetBrainsMono Nerd Font"
style = "Italic"

[font.bold_italic]
family = "JetBrainsMono Nerd Font"
style = "Bold Italic"

[font.offset]
x = -1
y = -1

[cursor]
style = { shape = "Beam", blinking = "Always" }
thickness = 0.15

[colors.primary]
background = "#212121"
foreground = "#cacaca"

[colors.cursor]
text = "#212121"
cursor = "#cacaca"

[colors.selection]
text = "#cacaca"
background = "#343434"

[colors.normal]
black   = "#212121"
red     = "#f3505c"
green   = "#51f66f"
yellow  = "#eedb85"
blue    = "#368aec"
magenta = "#d867c6"
cyan    = "#00f0ff"
white   = "#cacaca"

[colors.bright]
black   = "#676767"
red     = "#f3505c"
green   = "#51f66f"
yellow  = "#eedb85"
blue    = "#368aec"
magenta = "#d867c6"
cyan    = "#00f0ff"
